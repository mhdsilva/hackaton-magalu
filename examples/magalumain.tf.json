{
  "provider":{
    "mgc":{
      "api_key":"${var.api_key}",
      "region":"br-se1"
    }
  },
  "resource":{
    "mgc_virtual_machine_instances":{
      "database_server":{
        "name":"DatabaseServer",
        "machine_type":{
          "name":"cloud-bs1.medium"
        },
        "image":{
          "name":"cloud-ubuntu-22.04 LTS"
        },
        "ssh_key_name":"db-key",
        "network":{
          "associate_public_ip":false,
          "interface":{
            "security_groups":[
              {
                "id":"sg-87654321"
              }
            ]
          }
        }
      }
    }
  },
  "variable":{
    "mgc_env":{
      "description":"Define o ambiente operacional.",
      "default":"prod"
    }
  },
  "data":{ }
}